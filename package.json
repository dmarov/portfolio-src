{
  "name": "portfolio",
  "version": "1.0.0",
  "scripts": {
    "start:en": "ng serve --configuration=en --open",
    "start:ru": "ng serve --configuration=ru --open",
    "start": "ng serve",
    "start:prod:en": "ng serve --configuration=production,en",
    "start:prod:ru": "ng serve --configuration=production,ru",
    "build": "ng build",
    "build:prod": "ng build --configuration=production && node ./scripts/copy-index.js",
    "build:prod:en": "ng build --configuration=production,en",
    "build:prod:ru": "ng build --configuration=production,ru",
    "lint": "ng lint",
    "deploy": "yarn lint && yarn lint:styles && sh ./deploy.sh",
    "lint:styles": "stylelint src/**/*.scss",
    "lint:styles:fix": "stylelint src/**/*.scss --fix",
    "extract-i18n": "ng extract-i18n --output-path src/locale --out-file translation.base.xlf && xliffmerge --profile xliffmerge.json ru-RU",
    "serve:prod": "http-server ./dist/portfolio"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.3.0",
    "@angular/common": "^14.3.0",
    "@angular/compiler": "^14.3.0",
    "@angular/core": "^14.3.0",
    "@angular/forms": "^14.3.0",
    "@angular/platform-browser": "^14.3.0",
    "@angular/platform-browser-dynamic": "^14.3.0",
    "@angular/router": "^14.3.0",
    "@ngrx/effects": "^14.3.3",
    "@ngrx/router-store": "14.3.3",
    "@ngrx/store": "^14.3.3",
    "@ngrx/store-devtools": "^14.3.3",
    "intersection-observer": "^0.12.0",
    "normalize.css": "^8.0.1",
    "rxjs": "~6.5.4",
    "swiper": "^6.3.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.11",
    "@angular-eslint/builder": "13.5.0",
    "@angular-eslint/eslint-plugin": "13.5.0",
    "@angular-eslint/eslint-plugin-template": "13.5.0",
    "@angular-eslint/schematics": "14.4.0",
    "@angular-eslint/template-parser": "13.5.0",
    "@angular/cli": "^14.2.11",
    "@angular/compiler-cli": "^14.3.0",
    "@angular/language-service": "^14.3.0",
    "@angular/localize": "14.3.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "eslint": "^7.26.0",
    "http-server": "^14.1.0",
    "ngx-i18nsupport": "^0.17.1",
    "stylelint": "^14.7.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-node": "~8.3.0",
    "typescript": "~4.6.4"
  },
  "sideEffects": false
}
